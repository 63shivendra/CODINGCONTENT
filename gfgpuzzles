        </footer>

    </main>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.puzzle-card');
            const completedCountEl = document.getElementById('completed-count');
            
            // Load state from localStorage
            let solvedPuzzles = JSON.parse(localStorage.getItem('solvedPuzzles') || '[]');
            
            function updateCount() {
                completedCountEl.textContent = solvedPuzzles.length;
            }

            // Initialize UI based on saved state
            cards.forEach((card, index) => {
                const puzzleId = index; // Simple ID based on order
                
                // Set initial state
                if (solvedPuzzles.includes(puzzleId)) {
                    card.classList.add('solved');
                }

                card.addEventListener('click', function() {
                    this.classList.toggle('solved');
                    
                    if (this.classList.contains('solved')) {
                        if (!solvedPuzzles.includes(puzzleId)) {
                            solvedPuzzles.push(puzzleId);
                        }
                    } else {
                        solvedPuzzles = solvedPuzzles.filter(id => id !== puzzleId);
                    }
                    
                    localStorage.setItem('solvedPuzzles', JSON.stringify(solvedPuzzles));
                    updateCount();
                });
            });

            updateCount();
        });
    </script>
</body>
</html>
